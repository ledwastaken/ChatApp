<!DOCTYPE html>
<html>
  <head>
    <title>ChatApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
        <%= link_to t('conversations'), root_path(locale: I18n.locale) %>
        <%= link_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('devise.sessions.log_in'), new_session_path(resource_name) %>
        <%= link_to t('devise.sessions.sign_in'), new_registration_path(resource_name) %>
      <% end %>
    </nav>
    <%= yield %>
    <nav>
      <%= link_to 'FranÃ§ais', set_locale_link('fr') %>
      <%= link_to 'English', set_locale_link('en') %>
    </nav>
  </body>
</html>
