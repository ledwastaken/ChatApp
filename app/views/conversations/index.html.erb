<div>
  <label><%= current_user.email %></label>
</div>
<%= form_tag('/', method: :get) do %>
  <%= text_field_tag :search, params[:search], placeholder: "Rechercher par nom..." %>
  <%= submit_tag "Rechercher", name: nil %>
<% end %>
<ul>
  <% @users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>